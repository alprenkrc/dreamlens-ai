rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Dreams collection - authenticated users can read/write
    match /dreams/{dreamId} {
      allow read: if true; // Everyone can read
      allow create: if request.auth != null; // Only authenticated (including anonymous)
      allow update, delete: if request.auth != null &&
                              request.auth.uid == resource.data.userId;
    }

    // Users collection - a user can read/write only their own doc
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Video Quotas collection - users can read/write their own quota
    match /videoQuotas/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Optional: deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
